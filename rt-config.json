{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "output_file": {
      "description": "Filename for output image",
      "type": "string"
    },
    "camera": {
      "description": "Camera settings",
      "type": "object",
      "properties": {
        "from": {
          "description": "Position of camera",
          "$ref": "#/$defs/vector"
        },
        "to": {
          "description": "Position where camera points at",
          "$ref": "#/$defs/vector"
        },
        "up": {
          "type": "array",
          "$ref": "#/$defs/vector"
        },
        "width": {
          "type": "integer",
          "maximum": 1300,
          "minimum": 600,
          "default": 800
        },
        "height": {
          "type": "integer",
          "maximum": 1300,
          "minimum": 600,
          "default": 800
        },
        "fov_radian": {
          "type": "number",
          "default": 0.89759790102
        }
      },
      "required": [
        "from",
        "to",
        "up",
        "width",
        "height"
      ]
    },
    "light": {
      "type": "object",
      "properties": {
        "position": {
          "type": "array",
          "$ref": "#/$defs/vector"
        },
        "color": {
          "type": "array",
          "$ref": "#/$defs/vector"
        }
      },
      "required": [
        "position",
        "color"
      ]
    },
    "objects": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/object"
      }
    }
  },
  "$defs": {
    "vector": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 3,
      "maxItems": 3
    },
    "transformation": {
      "type": "object",
      "properties": {
        "transformation_type": {
          "type": "string",
          "enum": [
            "translation",
            "scaling",
            "rotation_x",
            "rotation_y",
            "rotation_z"
          ]
        }
      },
      "required": [
        "transformation_type"
      ],
      "oneOf": [
        {
          "properties": {
            "transformation_type": {
              "type": "string",
              "enum": [
                "translation",
                "scaling"
              ]
            },
            "vec": {
              "$ref": "#/$defs/vector"
            }
          },
          "required": [
            "transformation_type",
            "vec"
          ]
        },
        {
          "properties": {
            "transformation_type": {
              "type": "string",
              "enum": [
                "rotation_x",
                "rotation_y",
                "rotation_z"
              ]
            },
            "rad": {
              "type": "number"
            }
          },
          "required": [
            "transformation_type",
            "rad"
          ]
        }
      ]
    },
    "object": {
      "type": "object",
      "properties": {
        "material": {
          "type": "object",
          "properties": {
            "ambient": {
              "type": "number",
              "maximum": 1,
              "minimum": 0
            },
            "diffuse": {
              "type": "number",
              "maximum": 1,
              "minimum": 0
            },
            "color": {
              "$ref": "#/$defs/vector"
            },
            "specular": {
              "type": "number",
              "maximum": 1,
              "minimum": 0
            },
            "shininess": {
              "type": "number",
              "maximum": 1,
              "minimum": 0
            },
            "reflective": {
              "type": "number",
              "maximum": 1,
              "minimum": 0
            },
            "transparency": {
              "type": "number"
            },
            "refractive_index": {
              "type": "number"
            },
            "pattern": {
              "type": "object",
              "properties": {
                "pattern_type": {
                  "type": "string",
                  "enum": [
                    "checker",
                    "stripe",
                    "gradient",
                    "ring"
                  ]
                },
                "color_a": {
                  "$ref": "#/$defs/vector"
                },
                "color_b": {
                  "$ref": "#/$defs/vector"
                }
              },
              "required": [
                "pattern_type",
                "color_a",
                "color_b"
              ]
            }
          }
        },
        "transformation": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/transformation"
          }
        },
        "shape": {
          "type": "object",
          "properties": {
            "shape_type": {
              "type": "string",
              "enum": [
                "plane",
                "sphere",
                "cube",
                "cylinder",
                "cone"
              ]
            }
          },
          "required": [
            "shape_type"
          ],
          "oneOf": [
            {
              "properties": {
                "shape_type": {
                  "type": "string",
                  "enum": [
                    "plane",
                    "sphere",
                    "cube"
                  ]
                }
              },
              "required": [
                "shape_type"
              ]
            },
            {
              "properties": {
                "shape_type": {
                  "enum": [
                    "cone",
                    "cylinder"
                  ]
                },
                "min": {
                  "type": "number"
                },
                "max": {
                  "type": "number"
                },
                "closed": {
                  "type": "boolean"
                }
              },
              "required": [
                "shape_type",
                "min",
                "max",
                "closed"
              ]
            }
          ]
        }
      }
    }
  },
  "required": [
    "output_file",
    "camera",
    "light",
    "objects"
  ]
}